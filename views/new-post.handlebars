<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" class="form-input" id="title"/>

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input" id="content"></textarea>

    <button type="submit" class="btn" id="submit-btn">Create</button>
  </form>
</div>

<script src="/js/postBlog.js"></script>