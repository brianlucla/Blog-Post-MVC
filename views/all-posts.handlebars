<div class="posts">
  {{#each blogs}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/blogpost/{{id}}">{{blog_title}}</a>
      </h2>
      <div>
        Posted by {{User.username}} on {{formatDate createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{blog_content}}
    </div>
  </article>
  {{/each}}
</div>